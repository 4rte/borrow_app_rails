<div class="navbar navbar-expand-sm navbar-light navbar-home fixed-top">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "/assets/paw" %>

      <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, width: 50, height: 50, crop: :fill, class: "rounded-circle", style: "width: auto" , id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
            <%= image_tag "/assets/profile-white", class: "avatar" , id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false  %>
          <% end %>

            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "My profile", user_path(current_user), class: "dropdown-item" %>
              <%= link_to "My pets", new_tool_path, class: "dropdown-item" %>
              <%= link_to "My mates", tools_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item" style="display: flex; color: white">
              <%= link_to "Sign up", new_user_registration_path, class: "nav-link",  id: "nav-links"%>
              <%= link_to "Login", new_user_session_path, class: "nav-link",  id: "nav-links" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
