<div class="banner">

  <div>
    <div>
      <h1>BORROW</h1>
    </div>
    <div>
      <p id="tools-tagline">get the tools you need when & where you need 'em</p>
      <p id="sub-tagline">no need to buy 'em</p>
    </div>
    <div class="container" style="width: 80vh">
      <%= form_tag tools_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a tool in your city"
        %>
        <%= submit_tag "Search", class: "mt-2 btn btn-tool" %>
      <% end %>
    </div>
  </div>
</div>
