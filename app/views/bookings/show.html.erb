<div class="container" style="min-height: 80vh; padding-top: 80px">
  <h1 class="text-center mb-5">your tools are ready to be borrowed</h1>

  <div class="text-center profile-card mb-5" style="display: flex; padding-left: 50px; padding-right: 50px; padding-top: 50px; padding-bottom: 20px">
    <div style="width: 50%; height: 300px;">
        <% if false %>
          <%= image_tag @booking.tool.photo.key, height: 200, crop: :fill %>
          <% else %>
          <img src="https://images.unsplash.com/photo-1566937169390-7be4c63b8a0e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" alt="tool" width="500">
        <% end %>
    </div>
    <div style="width: 50%; height: 300px;">
        <p> Tool: <%= @booking.tool.name %> </p>
        <p> Category: <%= @booking.tool.category %> </p>
        <% if current_user  %>
          <p> by <%= @booking.tool.user.first_name %> <%= @booking.tool.user.last_name %></p>
        <% end %>
        <p> Description: <%= @booking.tool.description %> </p>
        <p> Start date: <%= @booking.start_date %> </p>
      <p> End date: <%= @booking.end_date %></p>
    </div>
  </div>
 <div class="text-center mb-5"> <%= link_to 'Your bookings', bookings_path, class: "btn btn-tool" %></div>

</div>

