<div class="screen main-container">
  <div class="tools">


    <div id="search-bar">
      <%= form_tag tools_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "what are you looking for? (cat/dog, breed, location..)"
        %>
        <%= submit_tag "Search", id: "search-button", class: "btn btn-tool" %>
      <% end %>
    </div>
    <h2 class="mb-5 mt-5 text-center">All Pets</h2>
    <div class="mt-5">
      <% @tools.each do |tool| %>
        <%= link_to tool_path(tool), style:"text-decoration: none" do  %>
          <div class="card-trip">
            <% if tool.photo.attached? %>
              <%= cl_image_tag tool.photo.key, width: 400, crop: :fill %>
              <% else %>
              <img src="https://images.unsplash.com/photo-1566937169390-7be4c63b8a0e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" alt="tool" width="500">
            <% end %>
            <div class="card-trip-infos">
              <div>
                <h2><%= tool.name %></h2>
                <p><%= tool.category %> | <%= tool.description %></p>
              </div>
              <h2 class="card-trip-pricing">Â£99.99</h2>
              <% if tool.user.photo.attached? %>
              <%= cl_image_tag tool.user.photo.key, width: 50, height: 50, crop: :fill, class:"card-trip-user" %>
              <% else %>
              <img src="https://images.unsplash.com/photo-1566937169390-7be4c63b8a0e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80"class="card-trip-user">
            <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div id="map"
    style="width: 100vh; height: 100vh; margin-top: 85px"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>


</div>

<div class="text-center m-5"><%= link_to 'Back to Homepage', root_path, class: "btn btn-tool" %> </div>
