<div class="container ">
  <div class="row">
    <div class="col-lg-6">
      <div class="row justify-content-between my-4">
        <% @tools.each do |tool| %>
        <div class="card-product m-2">
          <% if tool.photo.attached? %>
          <%= cl_image_tag tool.photo.key, width: 400, crop: :fill %>
          <% else %>
          <img src="https://images.unsplash.com/photo-1566937169390-7be4c63b8a0e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" alt="tool" width="500">
        <% end %>
          <div class="card-product-infos">
            <h2><%= link_to tool.name, tool_path(tool) %></h2>
            <p><%= tool.category %> | <%= tool.description %></p>
            <% if current_user  %>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="col-lg-6">
        <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>
