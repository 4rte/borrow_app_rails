<div class="container main-container" style="padding-top: 80px">
  <div class="cards" >
    <h2 class="text-center mb-4"> Tools</h2>
    <% @tools.each do |tool| %>
      <%= link_to tool_path(tool), style:"text-decoration: none" do  %>
        <div class="card-product">
          <% if tool.photo.attached? %>
          <%= cl_image_tag tool.photo.key, width: 400, crop: :fill %>
          <% else %>
          <img src="https://images.unsplash.com/photo-1566937169390-7be4c63b8a0e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" alt="tool" width="500">
        <% end %>
          <div class="card-product-infos">
            <h2><%= tool.name %></h2>
            <p><%= tool.category %> | <%= tool.description %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>


    <div id="map"
      style="width: 100vh; height: 100vh; margin-top: 62px"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>


</div>
<div class="text-center m-5"><%= link_to 'Back to Homepage', root_path, class: "btn btn-tool" %> </div>
