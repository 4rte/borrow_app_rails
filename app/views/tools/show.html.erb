<div class="container">
  <h1> <%= @tool.name %> </h1>
  <div>
    <% if @tool.photo.attached? %>
      <%= cl_image_tag @tool.photo.key, width: 400, crop: :fill %>
      <% else %>
      <img src="https://images.unsplash.com/photo-1566937169390-7be4c63b8a0e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" alt="tool" width="500">
    <% end %>
  </div>
  <div class="card-details">
    <p> Category: <%= @tool.category %> </p>
    <% if current_user  %>
      <p> by <%= @tool.user.first_name %> <%= @tool.user.last_name %></p>
    <% end %>
    <p> Description: <%= @tool.description %> </p>
  </div>
  <div class="btn-tool mt-2">
    <%= link_to 'Back to all tools', tools_path %>
  </div>
</div>
