<div class="container" style="min-height: 80vh">
  <h1 class="text-center mb-5"> <%= @tool.name %> </h1>
  <div style="display:flex">

  <div style="width: 50%; height: 300px;">
    <% if @tool.photo.attached? %>
      <%= cl_image_tag @tool.photo.key, height: 200, crop: :fill %>
      <% else %>
      <img src="https://images.unsplash.com/photo-1566937169390-7be4c63b8a0e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" alt="tool" width="500">
    <% end %>
    <p> Category: <%= @tool.category %> </p>
    <% if current_user  %>
      <p> by <%= @tool.user.first_name %> <%= @tool.user.last_name %></p>
    <% end %>
    <p> Description: <%= @tool.description %> </p>

    <div class="btn-tool m-2">
      <%= link_to 'Book this tool', new_tool_booking_path(@tool) %>
    </div>
  </div>

  <div id="map"
    style="width: 50%; height: 300px;"
    data-markers="<%= @marker.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  </div>

</div>
 <div class="text-center m-3"><%= link_to 'Back to all tools', tools_path %> </div>
